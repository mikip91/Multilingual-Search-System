<!-- order details template used in PDP for first time shopper flow and receipt-->
<script type="text/mustache" id="order-details-template">
  <div id="order-details-div" style="margin: 16px;" class="default-color">
    <div class="ft-wt-600 ft-16-ln-ht-20 txt-let-sp-1_6">
      {{divTitle}}
    </div>
    <div style="width: 100%;" class="marg-top-12 marg-btm-12">
      <div style="padding-bottom: 12px;" class="wd-25-perc fl-lt">
        <img src="{{imageUrl}}" alt="..." style="width: 100%; border: solid 1px rgba(112, 114, 141, 0.5);">
      </div>
      <div style="width: 48%; margin-left: 2%;" class="fl-lt">
        <div id="order-summary-title" class="ft-14-ln-ht-20 ft-wt-500">
          {{productTitle}}
        </div>
        <div class="ft-12-ln-ht-14 marg-top-4">
            Size: <span id="order-size-selected" class="ft-wt-600">{{sizeSelected}}</span>
        </div>
        <div class="ft-12-ln-ht-14 marg-top-4">
          Color: <span id="order-color-selected" class="ft-wt-600">{{colorSelected}}</span>
        </div>
        <div id="order-qty-selected-div" class="marg-top-12">
          Quantity: 
          <div id="order-qty-minus" class="qty-selection disabled" style="{{qtySelectionCss}}">-</div>
          <div id="order-qty-selected" class="txt-aln-ctr ft-14-ln-ht-20 ft-wt-bold">{{qtySelected}}</div>
          <div id="order-qty-plus" class="qty-selection" style="{{qtySelectionCss}}">+</div>
        </div>
      </div>
      <div id="ordered-product-amt" class="wd-25-perc fl-lt txt-aln-rt ft-wt-600 ft-14-ln-ht-20">{{productAmount}}</div>
      <div style="clear: both;"></div>
    </div>
    <div style="clear: both;"></div>
    <div id="payment-breakup-div">
      <div style="width: 100%;">
        <div id="merchant-shipping-text" class="wd-75-perc fl-lt ft-14-ln-ht-16 txt-aln-rt">
          <div>{{brandName}} Standard Shipping</div>
          <div id="shipping-arrival-est" class="ft-12-ln-ht-14">{{shippingArrivalEstimate}}</div>
        </div>
        <div id="shipping-cost" class="wd-25-perc fl-lt ft-14-ln-ht-16 txt-aln-rt ft-wt-600">{{shippingCost}}</div>
        <div style="clear: both;"></div>
      </div>
      <div style="width: 100%; padding-bottom: 12px;" class="marg-top-12">
        <div id="merc-sales-tax-text" class="wd-75-perc fl-lt ft-14-ln-ht-16 txt-aln-rt">
          <div>{{taxLabel}}</div>
          <div id="merc-sales-tax-dtl" class="ft-12-ln-ht-14">{{salesTaxDetails}}</div>
        </div>
        <div id="merc-sales-tax" class="wd-25-perc fl-lt ft-14-ln-ht-16 txt-aln-rt">{{salesTax}}</div>
        <div style="clear: both;"></div>
      </div>
    </div>
    <div style="clear: both;"></div>
    <div style="width: 100%;" class="ft-14-ln-ht-16 ft-wt-600 marg-top-14">
      <div id-"order-total-text" class="wd-75-perc fl-lt txt-aln-rt">TOTAL</div>
      <div id="order-total-amt" class="wd-25-perc fl-lt txt-aln-rt">{{orderTotal}}</div>
    </div>
    <div style="clear: both;"></div>
  </div>
</script>



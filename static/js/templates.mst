</script>


<!-- size selection dropdown template -->
<script type="text/mustache" id="size-dropdown-template">
  <div class="dropdown selectpicker default-color" style="float: left;">
    <button class="btn dropdown-toggle text-center" type="button" data-toggle="dropdown" aria-expanded="false">
      <div id="selected_size">Size</div>
      <i class="fa fa-angle-down"></i>
    </button>

<!-- steps template -->
<script type="text/mustache" id="header-steps-template">
  <div id="header-steps-div" style="display: none;">
    <table style="width: 100%;">
      <tbody>
        <tr>
          <td><img src="img/zb-purple-logo.png" style="height: 28px; margin-left: 12px;"></td>
          <td class="txt-aln-rt">
              <span style="font-size: 12px;line-height: 14px;color: #70728d; margin-right: 8px;">Step</span>
              <div data-id="1" class="step-number selected">1</div>
              <div data-id="2" class="step-number">2</div>
              <div data-id="3" class="step-number">3</div>
          </td>
        </tr>
      </tbody>

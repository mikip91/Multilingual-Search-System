      {{#sizeArr}}
        <li><a class="size-selection-item" href="javascript:setSelectedSize('{{size}}');">{{size}}</a></li>
      {{/sizeArr}}
    </ul>
  </div>
</script>


<!-- color selection dropdown template -->
<script type="text/mustache" id="color-dropdown-template">
